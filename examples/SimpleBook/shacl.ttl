# SHACL generated by python AP to shacl converter
@base <http://example.org/> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sdo: <https://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<BookShape> a sh:NodeShape ;
    rdfs:label "Book"@en ;
    rdfs:comment "Shape for describing books"@en ;
    sh:closed false ;
    sh:property <bookshapeAuthor>,
        <bookshapeISBN-13>,
        <bookshapeTitle>,
        <bookshapeType> ;
    sh:targetClass sdo:Book .

<AuthorShape> a sh:NodeShape ;
    rdfs:label "Author"@en ;
    rdfs:comment "Shape for describing authors"@en ;
    sh:closed true ;
    sh:property <authorshapeFamilyname>,
        <authorshapeGivenname>,
        <authorshapeType> ;
    sh:targetObjectsOf dct:creator .

<authorshapeFamilyname> a sh:PropertyShape ;
    sh:datatype xsd:string ;
    sh:name "Family name"@en-US ;
    sh:nodeKind sh:Literal ;
    sh:path foaf:familyName .

<authorshapeGivenname> a sh:PropertyShape ;
    sh:datatype xsd:string ;
    sh:name "Given name"@en-US ;
    sh:nodeKind sh:Literal ;
    sh:path foaf:givenName .

<authorshapeType> a sh:PropertyShape ;
    sh:hasValue foaf:Person ;
    sh:minCount 1 ;
    sh:name "Type"@en-US ;
    sh:nodeKind sh:IRI ;
    sh:path rdf:type ;
    sh:severity sh:Warning .

<bookshapeAuthor> a sh:PropertyShape ;
    sh:name "Author"@en-US ;
    sh:node <AuthorShape> ;
    sh:nodeKind sh:BlankNodeOrIRI ;
    sh:path dct:creator ;
    sh:severity sh:Warning .

<bookshapeISBN-13> a sh:PropertyShape ;
    rdfs:comment "Just checks for 13 digits."@en ;
    sh:datatype xsd:string ;
    sh:maxCount 1 ;
    sh:name "ISBN-13"@en-US ;
    sh:nodeKind sh:Literal ;
    sh:path sdo:isbn ;
    sh:pattern "^(\\\\d{13})?$" ;
    sh:severity sh:Violation .

<bookshapeTitle> a sh:PropertyShape ;
    sh:datatype rdf:langString ;
    sh:maxCount 1 ;
    sh:minCount 1 ;
    sh:name "Title"@en-US ;
    sh:nodeKind sh:Literal ;
    sh:path dct:title ;
    sh:severity sh:Violation .

<bookshapeType> a sh:PropertyShape ;
    sh:hasValue sdo:Book ;
    sh:maxCount 1 ;
    sh:minCount 1 ;
    sh:name "Type"@en-US ;
    sh:nodeKind sh:IRI ;
    sh:path rdf:type ;
    sh:severity sh:Warning .

